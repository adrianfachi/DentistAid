generator client {
  provider = "prisma-client" 
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Patient {
  patientId Int @id @default(autoincrement())
  email String @unique
  cpf String @unique
  name String
  telephone String
  birth_date DateTime
  occupation String
  origin String
  first_appointment DateTime
  recurrence String
  createdAt DateTime @default(now())
  updateAt DateTime @updatedAt
  deletedAt DateTime?
  posts Post[]
  appointments Appointment[]
}

model Post {
  postId String @id @default(uuid())
  content String?
  image String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?
  patient Patient @relation(fields: [patientId], references: [patientId])
  patientId Int
}

model Appointment {
  appointmentId String @id @default(uuid())
  name String
  date DateTime
  startsAt DateTime
  endsAt DateTime
  patient Patient @relation(fields: [patientId], references: [patientId])
  patientId Int
}

